<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FAF6E3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="3dp"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="90dp"
                            android:layout_height="70dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/profileImage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/profile_image"
                                app:civ_border_color="@color/blue"
                                app:civ_border_width="2dp" />

                            <ImageView
                                android:id="@+id/imgBan"
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:layout_gravity="top|left"
                                android:src="@drawable/not_done"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/imgStatus"
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:layout_gravity="bottom|right"
                                android:src="@drawable/status_1" />

                        </FrameLayout>

                        <TextView
                            android:id="@+id/txtStudy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="حادي عشر علمي"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                        <com.ei.zezoo.MyTextView
                            android:id="@+id/Name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="6dp"
                            android:layout_weight="0.3"
                            android:gravity="center"
                            android:text="الاسم"
                            android:textColor="@color/dark_gray"
                            android:textSize="24sp"
                            android:textStyle="bold"></com.ei.zezoo.MyTextView>

                        <com.ei.zezoo.MyTextView
                            android:id="@+id/User"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:gravity="center"
                            android:text="الاسم"
                            android:textColor="@color/dark_gray"
                            android:textSize="24sp"
                            android:textStyle="bold"></com.ei.zezoo.MyTextView>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="متصل الآن"
                    android:textColor="@color/blue"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imgOverflow"
                android:layout_width="35dp"
                android:layout_height="50dp"
                android:layout_gravity="top|left"
                android:clickable="true"
                android:src="@drawable/overflow_blue" />
        </FrameLayout>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel9">

                    <EditText

                        android:id="@+id/txtName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="9.5"
                        android:gravity="right"
                        android:hint="الاسم"
                        android:singleLine="true"

                        android:textColor="@color/spec_black"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel9">

                    <EditText
                        android:id="@+id/txtFather"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="9.5"
                        android:gravity="right"
                        android:hint="اسم الأب"
                        android:singleLine="true"

                        android:textColor="@color/spec_black"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel9">


                    <EditText

                        android:id="@+id/txtMother"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="9.5"
                        android:gravity="right"
                        android:hint="اسم الأم"
                        android:singleLine="true"

                        android:textColor="@color/spec_black"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel9">

                    <EditText

                        android:id="@+id/txtPlace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="9.5"
                        android:gravity="right"
                        android:hint="مكان السكن"
                        android:singleLine="true"

                        android:textColor="@color/spec_black"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </com.google.android.material.textfield.TextInputLayout>


                <LinearLayout
                    android:id="@+id/btnDate"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layoutDirection="locale"
                    android:orientation="horizontal"
                    android:padding="1dp"
                    android:theme="@style/AddNewPurBill"
                    android:weightSum="10">

                    <TextView
                        android:id="@+id/txtDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="7dp"
                        android:layout_weight="5"
                        android:gravity="center"
                        android:text="--/--/----"
                        android:textColor="@color/spec_black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView


                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="5"
                        android:background="@color/white"
                        android:text="تاريخ الميلاد"
                        android:textColor="@color/blue"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel9">

                    <EditText

                        android:id="@+id/txtId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="9.5"
                        android:gravity="right"
                        android:hint="الرقم الوطني"
                        android:singleLine="true"

                        android:textColor="@color/spec_black"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel9">

                    <EditText
                        android:id="@+id/txtFrom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="9.5"
                        android:gravity="right"
                        android:hint="الأمانة"
                        android:singleLine="true"

                        android:textColor="@color/spec_black"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel9">

                    <EditText
                        android:id="@+id/txtPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="9.5"
                        android:gravity="right"
                        android:hint="رقم الموبايل"
                        android:singleLine="true"

                        android:textColor="@color/spec_black"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel9">

                    <EditText
                        android:id="@+id/txtTelephone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="9.5"
                        android:gravity="right"
                        android:hint="رقم الهاتف الأرضي"
                        android:singleLine="true"

                        android:textColor="@color/spec_black"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel9">

                    <EditText
                        android:id="@+id/txtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="9.5"
                        android:gravity="right"
                        android:hint="البريد الإلكتروني"
                        android:singleLine="true"

                        android:textColor="@color/spec_black"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layoutDirection="locale"
                    android:orientation="horizontal"
                    android:padding="1dp"
                    android:theme="@style/AddNewPurBill"
                    android:weightSum="10">

                    <TextView
                        android:id="@+id/txtComments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="7dp"
                        android:layout_weight="5"
                        android:gravity="center"
                        android:text="--------"
                        android:textColor="@color/spec_black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:background="@color/white"
                        android:text="عدد التعليقات"
                        android:textColor="@color/blue"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layoutDirection="locale"
                    android:orientation="horizontal"
                    android:padding="1dp"
                    android:theme="@style/AddNewPurBill"
                    android:weightSum="10">

                    <TextView
                        android:id="@+id/txtQues"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="7dp"
                        android:layout_weight="5"
                        android:gravity="center"
                        android:text="--------"
                        android:textColor="@color/spec_black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:background="@color/white"
                        android:text="عدد الأسئلة"
                        android:textColor="@color/blue"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnCash"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layoutDirection="locale"
                    android:orientation="vertical"
                    android:padding="1dp"
                    android:theme="@style/SaveButton">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="كشف الحساب"
                        android:textColor="@color/orange"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtCash"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="7dp"
                        android:gravity="center"
                        android:text="باقي الحساب : 2500 ل.س"
                        android:textColor="@color/spec_black"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:text="مسجل من تاريخ : "
                    android:textColor="@color/blue"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>


    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/floatingActionSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_action_submit"
        app:fab_colorNormal="@color/blue"
        app:fab_colorPressed="@color/blue"
        app:menu_backgroundColor="@android:color/transparent"
        app:menu_fab_label=""
        app:menu_showShadow="true"></com.github.clans.fab.FloatingActionButton>
</RelativeLayout>